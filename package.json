{
  "name": "vape-n-vibe",
  "version": "3.1.0",
  "description": "Vape 'n' Vibe â€” push-to-talk voice transcription",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install": "node -e \"if(process.platform==='darwin')require('child_process').execSync('node-gyp rebuild',{stdio:'inherit'})\"",
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --publish never",
    "build:mac": "electron-builder --mac --publish never",
    "build:win": "electron-builder --win --publish never",
    "build:dir": "electron-builder --dir --publish never",
    "dist": "electron-builder --publish always"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "build": {
    "appId": "com.unstablemind.vapenvibe",
    "productName": "Vape 'n' Vibe",
    "directories": {
      "output": "release"
    },
    "files": [
      "main.js",
      "src/**/*",
      "assets/**/*",
      "!src/native/**",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/**/*.{map,ts}"
    ],
    "extraResources": [
      {
        "from": "build/Release",
        "to": "app.asar.unpacked/build/Release",
        "filter": [
          "*.node"
        ]
      }
    ],
    "asarUnpack": [
      "node_modules/whisper-node/**",
      "node_modules/uiohook-napi/**",
      "build/Release/*.node"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "arm64"
          ]
        }
      ],
      "entitlements": "scripts/entitlements.mac.plist",
      "entitlementsInherit": "scripts/entitlements.mac.plist",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "notarize": true,
      "signIgnore": [
        "libwhisper"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "devDependencies": {
    "@electron/notarize": "^3.1.1",
    "@eslint/js": "^10.0.1",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.3.0",
    "prettier": "^3.8.1"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-updater": "^6.6.2",
    "node-addon-api": "^8.5.0",
    "uiohook-napi": "^1.5.4",
    "whisper-node": "^1.1.1"
  }
}
